{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<main class="container mt-0 md:mt-12">

	<div class="overflow-hidden bg-white shadow sm:rounded-lg">
		<div class="px-4 py-5 border-b border-gray-200 sm:px-6">
			<h3 class="text-lg font-medium leading-6 text-gray-900">
				Produits
			</h3>
			<p class="max-w-2xl mt-1 text-sm leading-5 text-gray-500">
				Informations du produit
			</p>
		</div>
		<div>
			<dl>
				<div class="px-4 py-5 bg-gray-50 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
					<dt class="text-sm font-medium leading-5 text-gray-500">
						Référence du produit
					</dt>
					<dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
						{{ product.reference }}
					</dd>
				</div>

				<div class="px-4 py-5 bg-gray-50 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
					<dt class="text-sm font-medium leading-5 text-gray-500">
						Nom du produit
					</dt>
					<dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
						{{ product.name }}
					</dd>
				</div>
				<div class="px-4 py-5 bg-white sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
					<dt class="text-sm font-medium leading-5 text-gray-500">
						Description
					</dt>
					<dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
						{{ product.description }}
					</dd>
				</div>
				<div class="px-4 py-5 bg-gray-50 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
					<dt class="text-sm font-medium leading-5 text-gray-500">
						Prix
					</dt>
					<dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
						{{ product.price|number_format(2, '.', ',') }}€
					</dd>
				</div>
				<div class="px-4 py-5 bg-gray-50 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
					<dt class="text-sm font-medium leading-5 text-gray-500">
						Quantité
					</dt>
					<dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
						{{ product.quantity }}
					</dd>
				</div>
				<div class="px-4 py-5 bg-white sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
					<dt class="text-sm font-medium leading-5 text-gray-500">
						Photo
					</dt>
					<dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
						{% if product.photoFilename %}
							<img class="w-48" src="{{ asset('uploads/img/' ~ product.photofilename) }}"/>
						{% endif %}
					</dd>
				</div>
				<div class="px-4 py-5 bg-white sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
					<dt class="text-sm font-medium leading-5 text-gray-500">
						Actions
					</dt>
					<dd class="flex flex-col mt-1 text-sm leading-5 text-gray-900 md:flex-row sm:mt-0 sm:col-span-2">
						<a class="btn btn-info" href="{{ path('product_edit', {'slug': product.slug}) }}">Mettre à jour</a>

						{{ include('product/_delete_form.html.twig') }}

						<a class="mb-4 md:mb-0 btn" href="{{ path('product_index') }}">Revenir à la liste</a>
					</dd>
				</div>
			</dl>
		</div>
	</div>
</main>


{% endblock %}
